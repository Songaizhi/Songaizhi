@model ZDSoft.TES.Domain.QManagement
@{
    ViewBag.Title = "Details";
    Layout = null;
    <link href="@Url.Content("~/Content/css/ViewPage.css")" rel="stylesheet" type="text/css" />
}
<p>
    @Html.ActionLink("编辑", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("返回列表", "Index", "QManagement")
</p>
<fieldset>
    <legend>问卷详细信息</legend>
    <table cellpadding="0" cellspacing="0" class="dataGrid">
        <tr>
            <th>
                问卷名称
            </th>
            <th>
                问卷评选时间
            </th>
            <th>
                评选截止时间
            </th>
            <th>
                问卷类型
            </th>
            <th>
                指标类型
            </th>
            <th>
                是否激活
            </th>
        </tr>
        <tr>
            <td>
                @Model.Name
            </td>
            <td>
                @String.Format("{0:g}", Model.QSTime)
            </td>
            <td>
                @String.Format("{0:g}", Model.SDTime)
            </td>
            <td>@Model.Tpt.ResultPapers.Name
            </td>
            <td>@Model.Tpt.Name
            </td>
            <td>
                @{
                    if (Model.ISActive)
                    {
                    @:已激活
                    }
                    else
                    {
                    @:未激活
              }
                }
            </td>
        </tr>
    </table>
</fieldset>
