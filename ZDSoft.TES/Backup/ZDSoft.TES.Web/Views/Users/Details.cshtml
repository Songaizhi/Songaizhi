@model ZDSoft.TES.Domain.Users
@{
    ViewBag.Title = "Details";
    Layout = null;
    <link href="@Url.Content("~/Content/css/ViewPage.css")" rel="stylesheet" type="text/css" />
}
<div style="margin-top: 50px;" id="wrapper">
    <p>
        <h3 style="font-size: 16px;">@Html.ActionLink("返回列表", "Index", "Users")</h3>
    </p>
    <fieldset>
        <legend>用户详细信息</legend>
        <table cellpadding="0" cellspacing="0" class="dataGrid">
            <tr>
                <th>
                    用户名
                </th>
                <th>
                    账号
                </th>
                <th>
                    角色
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(m => m.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => m.Account)
                </td>
                <td>
                    @if (Model.Roles == null || Model.Roles.Count == 0)
                    {
                        <span>没有相关的数据</span>
                    }
                    else
                    {
                        string roList = "";
                        foreach (var r in Model.Roles)
                        {
                            if (roList == "")
                            {
                                roList = r.Name;
                            }
                            else
                            {
                                roList = roList + "," + r.Name;
                            }
                        }
                        @roList
                    }
                </td>
            </tr>
        </table>
    </fieldset>
</div>
