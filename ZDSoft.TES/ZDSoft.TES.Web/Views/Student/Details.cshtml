@model ZDSoft.TES.Domain.Student
@{
    ViewBag.Title = "Details";
    Layout = null;
    var temppaper = ViewBag.list as ZDSoft.TES.Domain.TempPaperType;
    
    <link href="@Url.Content("~/Content/css/ViewPage.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=gb2312">
    <title></title>
</head>
<body>
<div style=" margin-top:110px;">
    <p>
        @Html.ActionLink("返回列表", "Management", "Student")
    </p>
    <div id="tableExcel">
        <table cellpadding="0" cellspacing="0" class="dataGrid" border="1">
            <tr>
                <th>
                    学生名
                </th>
                <th>
                    学号
                </th>
                <th>
                    班级
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(m => m.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => m.No)
                </td>
                <td>
                    @Html.DisplayFor(m => m.Classes.Name)
                </td>
            </tr>
        </table>
    </div>
    <input type="submit" value="导出" onclick="saveCode(tableExcel)" class="btn3" />
    </div>

</body>
</html>
<script type="text/javascript">
    function saveCode(obj) {
        var winname = window.open('', '_blank', 'top=10000');
        var strHTML = document.all.tableExcel.innerHTML;
        winname.document.open('text/html', 'replace');
        winname.document.writeln(strHTML);
        winname.document.execCommand('saveas', '', 'excel.xls');
        winname.close();
    } 
</script>

